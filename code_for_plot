import numpy as np
import matplotlib.pyplot as plt

# set x-axis with time from 0 to 5, the interval is 0.2
time = np.arange(0., 5., 0.2)

# set 3 speeds:
speed = [20, 30, 40]

#create plot for the 3 speeds:
plt.plot (time, time*speed[0], 'r--', time, time*speed[1], 'bs', time, time*speed[2], 'g^')
plt.xlabel('Time')
plt.ylabel('Distance')
plt.show()
